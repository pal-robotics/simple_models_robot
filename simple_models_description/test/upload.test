<launch>
  <arg name="laser_model" default="false"/>
  <arg name="robot"       default="simple_pmb2"/>
  <arg name="multi"       default=""/>

  <!-- Robot description -->
  <include file="$(find simple_models_description)/robots/upload.launch">
    <arg name="laser_model" value="$(arg laser_model)"/>
    <arg name="robot"       value="$(arg robot)"/>
    <arg name="multi"       value="$(arg multi)"/>
  </include>

  <include file="$(find urdf_test)/launch/test_urdf.launch">
  	<arg name="get_description" value="true"/>
  </include>

</launch>
